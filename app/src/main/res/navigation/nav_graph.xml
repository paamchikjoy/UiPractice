<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/activity_main_fragment">

    <fragment
        android:id="@+id/activity_main_fragment"
        android:name="com.example.uipractice.activity_main_fragment"
        android:label="fragment_activity_main_fragment"
        tools:layout="@layout/fragment_activity_main_fragment" >
        <action
            android:id="@+id/action_activity_main_fragment_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_activity_main_fragment_to_registration"
            app:destination="@id/registration" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.uipractice.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/registration"
        android:name="com.example.uipractice.Registration"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" />
</navigation>